# Simple single-stage Dockerfile for Wine Service App
# Use this if the multi-stage build fails

FROM python:3.11-slim

# Install Node.js and other dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    ca-certificates \
    gnupg \
    && mkdir -p /etc/apt/keyrings \
    && curl -fsSL https://deb.nodesource.com/gpgkey/nodesource-repo.gpg.key | gpg --dearmor -o /etc/apt/keyrings/nodesource.gpg \
    && echo "deb [signed-by=/etc/apt/keyrings/nodesource.gpg] https://deb.nodesource.com/node_20.x nodistro main" | tee /etc/apt/sources.list.d/nodesource.list \
    && apt-get update \
    && apt-get install -y nodejs \
    && npm install -g yarn serve \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy everything
COPY . .

# Build frontend
WORKDIR /app/frontend
RUN yarn install && yarn build

# Install Python dependencies
WORKDIR /app/backend
RUN pip install --no-cache-dir -r requirements.txt

# Set working directory back to app root
WORKDIR /app

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV SECRET_KEY=wine-service-secret-key-change-in-production
ENV ACCESS_TOKEN_EXPIRE_MINUTES=120

# Expose ports
EXPOSE 8000 3000

# Create startup script
RUN echo '#!/bin/bash\n\
set -e\n\
echo "ðŸ· Wine Service App Starting..."\n\
echo "Initializing database..."\n\
cd /app/backend && python init_db.py\n\
echo "âœ“ Database ready"\n\
echo "Starting backend on port 8000..."\n\
cd /app/backend && uvicorn app.main:app --host 0.0.0.0 --port 8000 &\n\
BACKEND_PID=$!\n\
echo "âœ“ Backend started (PID: $BACKEND_PID)"\n\
sleep 2\n\
echo "Starting frontend on port 3000..."\n\
serve -s /app/frontend/dist -l 3000 &\n\
FRONTEND_PID=$!\n\
echo "âœ“ Frontend started (PID: $FRONTEND_PID)"\n\
echo ""\n\
echo "ðŸŽ‰ Wine Service App is running!"\n\
echo "   Frontend: http://localhost:3000"\n\
echo "   Backend:  http://localhost:8000/api"\n\
echo ""\n\
wait $BACKEND_PID $FRONTEND_PID\n\
' > /app/start.sh && chmod +x /app/start.sh

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:8000/api/healthz || exit 1

# Start both services
CMD ["/app/start.sh"]
